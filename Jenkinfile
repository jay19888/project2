pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
        retry (3)
        disableConcurrentBuilds()
    }
    parameters {
        choice (name:'CHOICE', choices:['one','two','three'], description: 'choose 1 to run job1 and job2')
        booleanParam (name: 'toggle', defaultValue: true)
    }
    stages {
        stage ('parallel'){
            parallel{
                stage('job1'){
                    when{
                        expression {
                            params.CHOICE == '1'          
                        }
                    }
                    steps {
                        sleep 30
                        echo "job 1 done"
                    }
                }
                stage('job2'){
                    steps {
                        sleep 15
                        echo "job 2 done"
                    }
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
